<% provide :title, 'Sign Up' %>

<%= render 'shared/error_messages' %>

<%= form_for @user do |f| %>
	<%= f.label :email, "Email" %>
	<%= f.text_field :email %>
	
	<%= f.label :password, "Password" %>
	<%= f.password_field :password %>
	
	<%= f.label :password_confirmation, "Confirm" %>
	<%= f.password_field :password_confirmation %>
	
	<%= f.submit "Create" %>
<% end %>
