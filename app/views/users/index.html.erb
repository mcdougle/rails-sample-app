<% provide :title, 'All Users' %>

<%= will_paginate %>

	<ul>
		<% @users.each do |user| %>
			<li>
				<%= link_to user.email, user %>
				<% if !current_user.nil? && current_user.admin? &&  !current_user?(user) %>
					| <%= link_to "delete", user, method: :delete, data: { confirm: "are you sure?" } %>
				<% end %>
					
			</li>
		<% end %>
	</ul>
	
<%= will_paginate %>
